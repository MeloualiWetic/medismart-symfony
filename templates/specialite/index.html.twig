{% extends 'base.html.twig' %}

{% block title %}Specialite index
{% endblock %}

{% block body %}
	<br>
	<div class="container-fluid">
		<div class="row top-actions">
			<div class="col-8 top-header">
				<h4>Liste des Specialit√©s</h4>
			</div>
			<div class="col-4 actions text-right">
				<a class="btn btn-primary" href="{{ path('specialite_new') }}">
					<i class="fas fa-plus"></i>
				</a>
			</div>
		</div>

		<br>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for specialite in specialites %}
						<tr>
							<td>{{ specialite.nom }}</td>
							<td>{{ specialite.description }}</td>
							<td>
								<a href="{{ path('specialite_show', {'id': specialite.id}) }}">
									<button class="btn btn-info">
										<i class="fas fa-eye"></i>
									</button>
								</a>
								<a href="{{ path('specialite_edit', {'id': specialite.id}) }}">
									<button class="btn btn-warning">
										<i class="fas fa-edit"></i>
									</button>
								</a>

								{{ include('specialite/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>
{% endblock %}
