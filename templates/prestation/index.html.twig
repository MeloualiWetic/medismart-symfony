{% extends 'base.html.twig' %}

{% block title %}Prestation index{% endblock %}

{% block body %}
<br>
    <div class="row top-actions">
        <div class="col-8 top-header">
            <h4>Liste des Prestations</h4>
        </div>
        <div class="col-4 actions text-right">
            <a class="btn btn-primary" href="{{ path('prestation_new') }}">Ajouter</a>
        </div>
    </div>

    <br>
<div>
{#    {{ error }}#}
</div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Frais</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestation in prestations %}
            <tr>
                <td>{{ prestation.id }}</td>
                <td>{{ prestation.libelle }}</td>
                <td>{{ prestation.frais }}</td>
                <td>
                    <a href="{{ path('prestation_show', {'id': prestation.id}) }}"><button class="btn btn-info"><i class="fas fa-eye"></i></button></a>
                    <a href="{{ path('prestation_edit', {'id': prestation.id}) }}"><button class="btn btn-warning"><i class="fas fa-edit"></i></button></a>
{#                    <a href="{{ path('prestation_delete', {'id': prestation.id}) }}"><button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></a>#}
                    {{ include('prestation/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
