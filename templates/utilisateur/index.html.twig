{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <br>
    <div class="row top-actions">
        <div class="col-8 top-header">
            <h4>Liste des patients</h4>
        </div>
        <div class="col-4 actions text-right">
            <a class="btn btn-primary" href="{{ path('utilisateur_new') }}">Ajouter</a>
        </div>
    </div>

    <br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
{#                <td>{{ utilisateur.id }}</td>#}
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.telephone }}</td>
                <td>
                    <a href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}"class="btn btn-info"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}"class="btn btn-warning"><i class="fas fa-edit"></i></a>
                    {{ include('utilisateur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
