{{ form_start(form) }}
<style>
    tr td:not(.td-not-hide):nth-child(4) {
        display: none;
    }
</style>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.utilisateur) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.refernce,{ 'label': 'Reference'}) }}
    </div>

</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.dateDebut) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.dataFin) }}
    </div>
</div>
<div class="row">

    <div class="col-md-6">
        {{ form_row(form.statut,{ 'label': 'Payer'}) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{ form_row(form.description) }}
    </div>

</div>

<br>
<h4>Details Consultation</h4>


<div class="row">
<div class="col-md-6" >
        <select style=" margin: 3% 9%;" id="prestations-list" class="selectpicker form-control">
        <option>Selectionner une prestation</option>
        {% for prestaion in listPrestation %}

            <option value="{{ prestaion.id }}" >{{ prestaion.libelle }}</option>
        {% endfor %}
    </select>
</div>
<br>
    <table class="table" >
        <tr>
            <th>

            </th>

            <th>
                Prestation
            </th>
            <th>
                Frais
            </th>
            <th>
                Action
            </th>
        </tr>
        <tr>
            <td class="td-not-hide">
                <input id="prestation-id"  class="form-control " type="hidden">
            </td>
            <td class="td-not-hide">
                <input id="prestation-libelle" class="form-control" type="text">
            </td>
            <td class="td-not-hide">
                <input id="prestation-frais"  class="form-control" type="number">
            </td>
            <td class="td-not-hide">
                <a href="#" class="btn btn-info" id="new-row">Ajouter</a>
            </td>
        </tr>
        <tbody id="detail_list" data-prototype="{{ form_widget(form.detailConsultations.vars.prototype)|e('html_attr') }}">
        {% for row in form.detailConsultations %}
        <tr class ="detail-consultation" >
            <td>
{#                {{ form_row(row.id) }}#}
            </td>
            <td>
                {{ form_row(row.prestationLibelle) }}
            </td>

            <td>
                {{ form_row(row.frais,{'type':'number'}) }}
            </td>
            <td>
                {{ form_row(row.prestation) }}
            </td>
            <td>
{#                <a href="{{ path('detail_consultation_edit', {'id': row.vars.value.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>#}
                <a href="{{ path('detail_consultation_delete', {'id': row.vars.value.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
{#                {{ include('consultation/_delete_dc_form.html.twig') }}#}

            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="new-detail"></div>
</div>
    {{ form_widget(form) }}


<div style="float: right;" class="col-2 actions text-right">
    <br>
    <button  class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
    {{ form_end(form) }}


