{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    {# <h1>Consultation index</h1> #}
    <br>
    <div class="container-fluid dashboard-div">
        <div class="row top-actions">
            <div class="col-8 top-header">
                <h4>Liste des Consultations</h4>
            </div>
            <div class="col-4 actions text-right">
                <a class="btn btn-primary" href="{{ path('consultation_new') }}"><i class="fas fa-plus"></i></a>
            </div>
        </div>

        <br>
        <div class="card-body">
            <table id="consultation-table" class="table table-bordered table-hover respensive-tbls">
                <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>Date Début</th>
                    <th>Data Fin</th>
                    {# <th>Description</th> #}
                    <th>Reference</th>
                    <th>Statut de paiement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for consultation in consultations %}
                    <tr>
                        {# <td>{{ consultation.id }}</td> #}
                        <td>{{ consultation.dateDebut ? consultation.dateDebut|date('d-m-Y H:i') : '' }}</td>
                        <td>{{ consultation.dataFin ? consultation.dataFin|date('d-m-Y H:i') : '' }}</td>
                        {# <td>{{ consultation.description }}</td> #}
                        <td>{{ consultation.refernce }}</td>
                        <td>
                            {% if(consultation.statut) %}
                                <i style="color: #639439" class="fas fa-check"></i>
                            {% else %}
                                <i style="color: #C6631F" class="fas fa-times"></i>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('consultation_show', {'id': consultation.id}) }}" class="btn btn-info"><i
                                        class="fas fa-eye"></i></a>
                            <a href="{{ path('consultation_edit', {'id': consultation.id}) }}"
                               class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            {{ include('consultation/_delete_form.html.twig') }}

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
