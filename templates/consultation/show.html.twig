{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}
    <h1>Consultation</h1>

    <div class="row">
        <div class="col-md-6">
            <label>Client : </label>
            {{ consultation.utilisateur.nom }} {{ consultation.utilisateur.prenom }}
        </div>
        <div class="col-md-6">
            <label>Réference : </label>
            {{ consultation.refernce }}
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Date Début : </label>
            {{ consultation.dateDebut ? consultation.dataFin|date('d-m-Y H:i') : '' }}
        </div>
        <div class="col-md-6">
            <label>Date Fin : </label>
            {{ consultation.dataFin ? consultation.dataFin|date('d-m-Y H:i') : '' }}
        </div>

    </div>
    <div class="row">
        <div class="col-md-6 ">
            <label>Statut de paiement : </label>
            {{ consultation.statut ? 'Payé' : 'Non Payé' }}
        </div>
        <div class="col-md-6">
            <label>description: </label>
            <td>{{ consultation.description }}</td>
        </div>

    </div>
<br>
    <h4>Details Consultation</h4>

<table class="table">
    <th>
        Libelle
    </th>
    <th>
        Prix
    </th>

    </tr>
    {% for row in consultation.detailConsultations %}
    <tr>

        <td>
            {{ row.prestation}}
        </td>
        <td>
            {{ row.frais }}
        </td>

    {% endfor %}
    </tr>
</table>

