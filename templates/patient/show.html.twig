{% extends 'base.html.twig' %}

{% block title %}Patient
{% endblock %}

{% block body %}
	<h1>Patient</h1>
	<div class="container-fluid dashboard-div">

		<table class="table">
			<tbody>

				<tr>
					<th>Nom</th>
					<td>{{ patient.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ patient.prenom }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ patient.email }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ patient.telephone }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('patient_index') }}">back to list</a>

		<a href="{{ path('patient_edit', {'id': patient.id}) }}">edit</a>


		<a class="btn btn-danger" href="{{ path('patient_index') }}">
			<i class="fas fa-chevron-circle-left"></i>
		</a>
		<div style="float: right;" class="col-2 actions text-right">
			<a class="btn btn-warning " href="{{ path('patient_edit', {'id': patient.id}) }}">
				<i class="fas fa-edit"></i>
			</a>
		</div>

	</div>

{% endblock %}
