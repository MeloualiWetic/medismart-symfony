{% extends 'base.html.twig' %}

{% block title %}Patient index
{% endblock %}

{% block body %}
	<div class="container-fluid dashboard-div">
		<br>
		<div class="row top-actions">
			<div class="col-8 top-header">
				<h4>Liste des Patient</h4>
			</div>
			<div class="col-4 actions text-right">
				<a class="btn btn-primary" href="{{ path('patient_new') }}">
					<i class="fas fa-plus"></i>
				</a>
			</div>
		</div>

		<br>
		<div class="card-body">
			<table class="table table-bordered table-hover respensive-tbls">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Prenom</th>
						<th>Email</th>
						<th>Telephone</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for patient in patients %}
						<tr>
							<td>{{ patient.nom }}</td>
							<td>{{ patient.prenom }}</td>
							<td>{{ patient.email }}</td>
							<td>{{ patient.telephone }}</td>
							<td>

								<a href="{{ path('patient_show', {'id': patient.id}) }}" class="btn btn-info">
									<i class="fas fa-eye"></i>
								</a>
								<a href="{{ path('patient_edit', {'id': patient.id}) }}" class="btn btn-warning">
									<i class="fas fa-edit"></i>
								</a>
								{{ include('patient/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
